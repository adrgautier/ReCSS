{
	"compilerOptions": {
		"outDir": "lib",
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
        "declaration": false,
		"sourceMap": true,
		"jsx": "react"
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
        "node_modules",
        "./src/**/__tests__/**/*.ts",
        "./src/**/__tests__/**/*.tsx",
	]
}