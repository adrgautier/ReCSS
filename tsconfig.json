{
	"compilerOptions": {
		"outDir": "lib",
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
        "declaration": true,
		"sourceMap": true,
		"jsx": "react"
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"coverage",
		"demo",
		"docs",
		"lib",
		"node_modules",
		"./src/**/*.test.tsx",
		"./src/**/*.test.ts",
		"./src/**/*.spec.tsx",
		"./src/**/*.spec.ts"
	]
}